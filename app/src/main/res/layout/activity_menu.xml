            android:gravity="center_vertical|end">
        <TextView
                android:text="Guardar Tarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtOpcion1" android:layout_weight="1"
                android:textSize="34sp" android:fontFamily="@font/poppins_bold" android:textColor="#FFFFFF"
                android:layout_marginStart="20dp"/>
        <ImageView
                android:layout_width="261dp"
                android:layout_height="wrap_content" app:srcCompat="@drawable/agregar_tarea"
                android:id="@+id/imgOpcion1"
                android:layout_weight="1" android:layout_marginEnd="20dp"/>
    </LinearLayout>
    <androidx.appcompat.widget.Toolbar
            android:layout_width="425dp"
            android:layout_height="95dp"
            android:background="@drawable/borders"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.642" app:layout_constraintVertical_bias="0.0"
    />
    <ImageView
            android:layout_width="82dp"
            android:layout_height="79dp" app:srcCompat="@drawable/logo" android:id="@+id/logoBar"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolbar" app:layout_constraintVertical_bias="0.695"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="Cerrar SesiÃ³n"
            android:layout_width="167dp"
            android:layout_height="60dp" android:id="@+id/btnLogout"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="28dp" android:backgroundTint="#D3D6BD" android:fontFamily="@font/poppins"
            android:textColor="#000000" android:textSize="16sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>