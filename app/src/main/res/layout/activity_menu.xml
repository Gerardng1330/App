            android:background="@drawable/borders" android:id="@+id/opcion2" android:gravity="start|center_vertical">
        <ImageView
                android:layout_width="167dp"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ver_tareas" android:id="@+id/imgOpcion2"
                android:layout_weight="1" android:layout_marginStart="30dp"/>
        <TextView
                android:text="Ver Tareas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtOpcion2" android:layout_weight="1"
                android:textSize="34sp" android:fontFamily="@font/poppins_bold" android:textColor="#FFFFFF"
                android:layout_marginEnd="30dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="425dp"
            android:layout_height="154dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.16" app:layout_constraintEnd_toEndOf="parent"
